{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "display": "Base NestJS",
  "compilerOptions": {
    "target": "esnext",

    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "incremental": true,

    // Loose checks
    "skipLibCheck": true,
    // "strict": false,

    // Output
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true
  }
}
